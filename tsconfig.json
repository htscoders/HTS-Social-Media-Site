/*
 * For DOM JavaScript ONLY, no NodeJS libraries here.
 */

{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "target": "ES6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "removeComments": true
    }
}